<%= form_with(model: @port_items, local: true) do |form| %>
 
<div class="row">
  <div class="col-md-5">
      <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :subtitle %>
      <%= form.text_field :subtitle, class: "form-control" %>
    </div>
  

    <div class="form-group">
      <%= form.file_field :main_image %>
    </div>

    <div class="form-group">
     <%= form.file_field :second_image %>
    </div> 
  </div>   
  <div class="col-md-7">
    <div class="form-group">
      <%= form.label :body %>
      <%= form.text_area :body, class: "form-control", rows: 13 %>
    </div>
  </div>
</div>

<div class="col-md-8">
  <h2>Technologies Used:</h2>
  <div>                <!--this mapped from portfolios.rb-->
    <%=form.fields_for :technologies do |t|%>
    <div class="form-group">
    <%= t.label :name%>
    <%= t.text_field :name, class: "form-control"%>
    </div>
    <%end%>
  </div>

  <div class="actions">
    <%= form.submit "Save", class: "btn btn-primary form-control" %>
  </div>
  </div>
<% end %>