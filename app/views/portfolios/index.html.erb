<h1>Portfolio Home page</h1>

<h1>Posts</h1>
<!--Rails way to create a path to another page-->
<%=link_to "Create a New Item", new_portfolio_path%>

<% @port_items.each do |x| %>
    <p><%= link_to x.title, portfolio_show_path(x.id)%></p>
    <p><%=x.subtitle%></p>
    <p><%=x.body%></p>
    <!--run this unless the image is nil --> 
    <%= image_tag x.second_image unless x.second_image.nil? %>
    <!--Pass into the path the id from the iteration-->
    <%=link_to "Edit", edit_portfolio_path(x) %>
    <!--Without the method: :delete it would think it is the show page notice the paths are the same-->
    <%= link_to 'Delete Item', portfolio_path(x), method: :delete, data: { confirm: 'Are you sure?' } %>
<%end%>
